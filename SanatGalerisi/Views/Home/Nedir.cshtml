@using SanatGalerisi.Models
@model List<Nedir>
@{
    ViewData["Title"] = "Nedir";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">

    <div class="nedir">
        <div class="overlay">
            @foreach (var x in Model)
            {
                <p>@x.Aciklama</p>
            }
            <div class="button-container">
                <button class="translucent-button" style="width: calc(100% - 40px);">Galeriyi Gezmeye Başla!</button>
            </div>
        </div>
        <img src="~/lib/images/nedir.jpg" class="nedir">
    </div>
</div>

