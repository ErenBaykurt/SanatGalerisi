<div class="gallery">
    @for (int i = 0; i < Model.Count; i += 2)
    {
        <div class="row">
            @if (i < Model.Count)
            {
                <div class="card">
                    <img src="@Model[i].Fotourl" class="card-img-top">
                    <div class="card-body">
                        <p class="card-text">@Model[i].Aciklama</p>
                    </div>
                </div>
            }
            @if (i + 1 < Model.Count)
            {
                <div class="card">
                    <img src="@Model[i + 1].Fotourl" class="card-img-top">
                    <div class="card-body">
                        <p class="card-text">@Model[i + 1].Aciklama</p>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Yeni bir resim eklemek için şablon -->
    <div class="row">
        <!-- Eğer yeni bir resim eklenirse buraya bir card eklenir -->
    </div>
</div>
