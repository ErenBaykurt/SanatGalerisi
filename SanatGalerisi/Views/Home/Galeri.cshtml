@model List<Galeri>
@{
    ViewData["Title"] = "Galeri";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="gallery">
        <div class="row">
            <div class="card">
                @foreach (var x in Model)
                {
                    <img src="@x.Fotourl" class="card-img-top">
                    <div class="card-body">
                        <p class="card-text">@x.Aciklama</p>
                    </div>
                }
            </div>
            
        </div>
    </div>
</div>

